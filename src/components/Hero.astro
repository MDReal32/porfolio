---
import { portfolio } from "../data/portfolio";
const { basics, summary } = portfolio;
---

<section class="px-6 pt-16 pb-14">
  <div class="mx-auto max-w-2xl">
    <!-- Location -->
    <p class="text-xs tracking-wide uppercase opacity-50">
      {basics.location}
    </p>

    <!-- Name -->
    <h1 class="mt-3 text-5xl leading-[1.05] font-bold tracking-tight">
      {basics.preferredName ?? basics.fullName}
    </h1>

    <!-- Title -->
    <p class="mt-3 text-base opacity-70">
      {basics.title}
    </p>

    <!-- Summary -->
    {
      summary?.lines?.length ? (
        <div class="mt-7 space-y-2">
          {summary.lines.map(line => (
            <p class="text-[15px] leading-7 opacity-85">{line}</p>
          ))}
        </div>
      ) : null
    }

    <!-- Divider (anchors the hero so it doesn't feel "floating") -->
    <div class="border-base-300/60 mt-10 border-t"></div>
  </div>
</section>
